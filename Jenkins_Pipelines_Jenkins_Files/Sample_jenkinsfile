pipeline {
    agent any

    environment {
        MY_ENV_VAR = 'Custom Value'
    }

    options {
        timeout(time: 30, unit: 'MINUTES') // Set a timeout for the entire pipeline
    }

    stages {
        stage('Checkout') {
            steps {
                retry(3) { // Retry up to 3 times
                    script {
                        def gitRepoUrl = 'https://github.com/Voste126/Jenkins_Upgradev3.git'

                        checkout([$class: 'GitSCM', 
                            branches: [[name: '*/master']], 
                            userRemoteConfigs: [[url: gitRepoUrl]], 
                            extensions: [
                                [$class: 'CleanBeforeCheckout'], 
                                [$class: 'CloneOption', noTags: false, shallow: true, depth: 1, timeout: 20]
                            ]
                        ])
                    }
                }
            }
        }

        stage('Build') {
            steps {
                sh '''
                ls
                echo "In Build Step"
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'echo "In Test Step"'
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Value of ENV Variable is $MY_ENV_VAR"'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
